# hw definition file for processing by chibios_hwdef.py for CUAV-X7

# MCU class and specific type
MCU STM32H7xx STM32H750xx

# board ID for firmware load
APJ_BOARD_ID 10086

# crystal frequency, setup to use external oscillator
OSCILLATOR_HZ 8000000

MCU_CLOCKRATE_MHZ 480

env OPTIMIZE -O2

define HAL_WITH_EKF_DOUBLE 0

# ChibiOS system timer
STM32_ST_USE_TIMER 13
define CH_CFG_ST_RESOLUTION 16

# reserve 256 bytes for comms between app and bootloader
RAM_RESERVE_START 256

# bootloader takes first sector
FLASH_SIZE_KB 128
FLASH_RESERVE_START_KB 0
define HAL_FLASH_PROTECTION 1

EXT_FLASH_SIZE_MB 8
EXT_FLASH_RESERVE_START_KB 1024
EXT_FLASH_RESERVE_END_KB 448

# QuadSPI Flash
PD11  QUADSPI_BK1_IO0 QUADSPI1 SPEED_HIGH
PD12  QUADSPI_BK1_IO1 QUADSPI1 SPEED_HIGH
PE2   QUADSPI_BK1_IO2 QUADSPI1 SPEED_HIGH
PD13  QUADSPI_BK1_IO3 QUADSPI1 SPEED_HIGH
PB10  QUADSPI_BK1_NCS QUADSPI1 SPEED_HIGH
PB2   QUADSPI_CLK     QUADSPI1 SPEED_HIGH

# LED setup is similar to PixRacer
define HAL_HAVE_PIXRACER_LED
PE4 LED_RED OUTPUT GPIO(10)
PE3 LED_GREEN OUTPUT GPIO(11)
PE5 LED_BLUE OUTPUT GPIO(12)

define HAL_GPIO_A_LED_PIN 10
define HAL_GPIO_B_LED_PIN 11
define HAL_GPIO_C_LED_PIN 12

define HAL_GPIO_LED_ON  0
define HAL_GPIO_LED_OFF 1

PD7 HEATER_EN OUTPUT LOW GPIO(80)
define HAL_HEATER_GPIO_PIN 80
define HAL_HAVE_IMU_HEATER 1

# order of UARTs (and USB)
SERIAL_ORDER OTG1 USART3 UART8

# now we define the pins that USB is connected on
PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1
PA9  VBUS INPUT PULLDOWN

# these are the pins for SWD debugging with a STlinkv2 or black-magic probe
PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# USART 
PD8 USART3_TX USART3
PD9 USART3_RX USART3

PE1 UART8_TX UART8
PE0 UART8_RX UART8

# only one I2C bus
I2C_ORDER I2C1

PB6 I2C1_SCL I2C1 PULLUP
PB7 I2C1_SDA I2C1 PULLUP

# PWM channels
PA6  TIM3_CH1  TIM3  PWM(1)  GPIO(50)
PA7  TIM3_CH2  TIM3  PWM(2)  GPIO(51)
PB0  TIM3_CH3  TIM3  PWM(3)  GPIO(52)
PB1  TIM3_CH4  TIM3  PWM(4)  GPIO(53)
PA2  TIM2_CH3  TIM2  PWM(5)  GPIO(54)
PA3  TIM2_CH4  TIM2  PWM(6)  GPIO(55)
PA0  TIM2_CH1  TIM2  PWM(7)  GPIO(56)
PE9  TIM1_CH1  TIM1  PWM(8)  GPIO(57)
PE11 TIM1_CH2  TIM1  PWM(9)  GPIO(58)
PA10 TIM1_CH3  TIM1  PWM(10) GPIO(59)
PC6  TIM8_CH1  TIM8  PWM(11) GPIO(60)
PC7  TIM8_CH2  TIM8  PWM(12) GPIO(61)
PD14 TIM4_CH3  TIM4  PWM(13) GPIO(62)
PD15 TIM4_CH4  TIM4  PWM(14) GPIO(63)
PB14 TIM12_CH1 TIM12 PWM(15) GPIO(64) NODMA
PB15 TIM12_CH2 TIM12 PWM(16) GPIO(65) NODMA

define STM32_PWM_USE_ADVANCED TRUE

# RC input
PA1 TIM5_CH2 TIM5 RCININT PULLUP LOW 

# BATT
define HAL_USE_ADC FALSE
define STM32_ADC_USE_ADC1 FALSE
define HAL_DISABLE_ADC_DRIVER TRUE

define HAL_BATT_MONITOR_DEFAULT 8

define HAL_BATT_VOLT_PIN -1
define HAL_BATT_VOLT_SCALE -1
define HAL_BATT_CURR_PIN -1
define HAL_BATT_CURR_SCALE -1

# CAN bus
PB8  CAN1_RX CAN1
PB9  CAN1_TX CAN1

PB12 CAN2_RX CAN2
PB13 CAN2_TX CAN2

CAN_ORDER 2 1

# SPI1 - sensors1
PB3 SPI3_SCK  SPI3
PB4 SPI3_MISO SPI3
PB5 SPI3_MOSI SPI3

PE12 SPI4_SCK  SPI4
PE13 SPI4_MISO SPI4
PE14 SPI4_MOSI SPI4

# sensor 
PE8   ICM_CS  CS
PE15  BARO_CS  CS

# SPI devices
SPIDEV ICM    SPI4 DEVID1  ICM_CS   MODE3  4*MHZ  8*MHZ
SPIDEV spl06  SPI4 DEVID2  BARO_CS  MODE3  1*MHZ  1*MHZ

# TWO IMU
IMU Invensensev3 SPI:ICM ROTATION_PITCH_180

define HAL_DEFAULT_INS_FAST_SAMPLE 1

BARO SPL06 SPI:spl06
define HAL_BARO_ALLOW_INIT_NO_BARO

# compass 
COMPASS IST8310 I2C:0:0x0C false ROTATION_YAW_180

define ALLOW_ARM_NO_COMPASS
define HAL_COMPASS_DEFAULT HAL_COMPASS_NONE
define HAL_PROBE_EXTERNAL_I2C_COMPASSES
define HAL_I2C_INTERNAL_MASK 0

# microSD support
PC8 SDMMC1_D0 SDMMC1
PC9 SDMMC1_D1 SDMMC1
PC10 SDMMC1_D2 SDMMC1
PC11 SDMMC1_D3 SDMMC1
PC12 SDMMC1_CK SDMMC1
PD2 SDMMC1_CMD SDMMC1


# allow to have have a dedicated safety switch pin
define HAL_HAVE_SAFETY_SWITCH 0

# enable RAMTROM parameter storage
define HAL_STORAGE_SIZE 16384

# enable FAT filesystem support (needs a microSD defined via SDMMC)
define HAL_OS_FATFS_IO 1
define HAL_BOARD_LOG_DIRECTORY "/APM/LOGS"
define HAL_BOARD_TERRAIN_DIRECTORY "/APM/TERRAIN"

# setup for OSD
define OSD_ENABLED 1
define HAL_OSD_TYPE_DEFAULT 1
ROMFS_WILDCARD libraries/AP_OSD/fonts/font*.bin